  <div class="container">
    <div class="row">
      <% @cocktails.each do |cocktail| %>
        <div class="col-xs-12 col-sm-4">
          <%= link_to cocktail_path(cocktail) do %>
            <div class="cocktail-card" >
              <div class="cocktail-name">
                <%= cocktail.name.capitalize %>
              </div>
              <div class="photo">
                  <%#= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

                <%= cl_image_tag cocktail.photo, height: 250, width: 200, crop: :fill %>
              </div>
              <%#= link_to cocktail.name, cocktail_path(cocktail) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
